/**index.wxss**/
.page{
  font-size: 12px;
}
.article-detail{
  padding:0 30rpx;
}
.article-list{
  padding: 0;
}
.head{
  position: relative;
}
.arvatar{
  color:#252525;
  font-size: 1.1666666666666667em;
  display: flex;
  align-items: center;
}
.arvatar-img{
  width:60rpx;
  height:60rpx;
  margin-right:20rpx;
  border-radius:50%;
}
.like{
  position: absolute;
  top:50%;
  right: 0;
  transform:translateY(-50%);
}

.icon-like{
  width: 32rpx;
  height: 32rpx;
}

.like-num{
  margin-left: 10rpx;
  font-size: 0.9166666666666666em;
  color: rgb(137, 137, 137);
}

.content{
  margin-top: 24rpx;
  font-size: 1.1666666666666667em;
}
