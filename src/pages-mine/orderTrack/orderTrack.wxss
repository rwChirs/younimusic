.container{
  background-color: rgba(0, 0, 0, 0.03);
  min-height: auto;
}
.order-info-extend{
  border-bottom: solid 1px rgb(222, 222, 222);
  border-top: solid 1px rgb(222, 222, 222);
  padding: 4rpx 30rpx;
  background-color: #fff;
}
.order-info-extend-line{
  line-height: 60rpx;
  color: rgb(137, 137, 137);
  font-size: 26rpx;
}
.order-info-value{
  color: rgb(37, 37, 37);
}


.logistics-info{
  margin-top:20rpx;
  background: #ffffff;
  border-top:1px solid rgb(227,229,232);
}
.left-part{
  width:14%;
}

.left-dot{
  margin-left: -2rpx;
  margin-right: 15rpx;
  margin-top: 48rpx;
}

.left-dot-item{
  width: 12rpx;
  /* height: 165rpx; */
  margin: 0 auto;
}
.left-dot-item-icon{
  width: 1px;
  /* height: 165rpx; */
  background: rgb(227,229,232);
  margin: 0 auto;
}

.left-dot-item-line{
  width: 2rpx;
  height: 100%;
  background-color: #EBEBEB;
  margin-left: 44rpx;
}
.left-dot-item::after{
  content: '';
  width: 12rpx;
  height: 12rpx;
  background: rgb(227,229,232);
  border-radius: 100%;
  display:flex;
}
.flag{
  position: relative;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0,100,174,0.2);
  border-radius: 100%;
  margin-left: 30rpx;
  margin-right: 15rpx;
  margin-top: 45rpx;
}
.flag-in{
  position: absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin: auto;
  width: 20rpx;
  height: 20rpx;
  background: #00AB0C;
  border-radius: 100%;
  z-index: 11;
}
.right-part{
  width:auto;
  overflow: hidden;
}
.logistics-list{
  display: flex;
}
.logistics-list-wrap {
  flex: 1
}
.logistics-item{
  padding-top: 32rpx;
  padding-bottom: 30rpx;
  padding-right: 20rpx;
  border-bottom:1px solid rgb(227,229,232);
}
.logistics-detail{
  /* padding-bottom: 30rpx; */
}
.logistics-detail-text{
  font-size: 26rpx;
  color: rgb(137,137,137);
}
.logistics-time-text{
  font-size: 26rpx;
  color: rgb(137,137,137);
}
.logistics-map {
  width: 100%;
  height: 320px;
  transform: 0.6
}
.cover-view{
  background: #000;
}
